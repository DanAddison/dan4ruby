{% extends "layout.njk" %}

{% block content %}

  <div class="row row--pad">

    <div class="contact">

      <div class="portrait">
        <img src="assets/images/KefAvatarSquare.jpg" alt="">
      </div>

      <form class="contact-form" name="contact" method="POST" netlify-honeypot="bot-field" netlify>
        <p class="hidden">
          <label>Donâ€™t fill this out if you're human: <input name="bot-field" /></label>
        </p>
        <p>
          <label>Your Name: <input type="text" name="name" required/></label>   
        </p>
        <p>
          <label>Your Email: <input type="email" name="email" required/></label>
        </p>
        <p>
          <label>Your fav TV show: <select name="fav[]">
            <option value="wire">The Wire</option>
            <option value="some other bullshit">Some other bullshit</option>
          </select></label>
        </p>
        <p>
          <label>Message: <textarea name="message" rows="10" required></textarea></label>
        </p>
        <div data-netlify-recaptcha></div>
        <p>
          <button type="submit">Send</button>
        </p>
      </form>

    </div><!-- .contact -->

  </div><!-- row -->

{% endblock %}

