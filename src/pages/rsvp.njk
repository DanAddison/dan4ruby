{% set body_id = "RSVP" %}

{% extends "layout.njk" %}

{% block content %}

  <div class="row row--pad">

    <div class="rsvp">

      <div class="meme">
        <img src="assets/images/brule.jpeg" alt="">
      </div>

      <h2 class="rsvp__item-number">
        <span>1.
        </span>Please tell us whether you can come</h2>

      <div class="rsvp__item">

        <form class="contact-form" name="contact" method="POST" netlify-honeypot="bot-field" netlify="netlify">
          <p class="hidden">
            <label>Donâ€™t fill this out if you're human:
              <input name="bot-field"/></label>
          </p>
          <p>
            <input type="text" name="name" placeholder="Your Name(s)" required="required"/>
          </p>
          <p>
            <input type="email" name="email" placeholder="Your Email" required="required"/>
          </p>
          <fieldset>
            <label>Will you be joining us?
              <select name="attending[]" required="required">
                <option value="">-- please choose an option --</option>
                <option value="yes">I will !!</option>
                <option value="no">No, I'm holding out for a better proposal</option>
              </select>
            </label>
          </fieldset>
          <p>
            <textarea type="text" name="dietary" placeholder="Please let us know if you (or anyone in your party) are veggie, vegan, gluten-free etc." rows="4"></textarea>
          </p>
          <p>
            <textarea type="text" name="message" placeholder="If there's anything else you'd like to add, speak now or forever blah blah blah" rows="10"></textarea>
          </p>
          <div data-netlify-recaptcha="data-netlify-recaptcha"></div>
          <p>
            <button type="submit">Send</button>
          </p>
        </form>

      </div>
      <!-- rsvp__item -->

      <h2 class="rsvp__item-number">
        <span>2.
        </span>Please tell us some other stuff</h2>
      <div class="rsvp__item">

        <a class="typeform-share button" href="https://danieladdison.typeform.com/to/R9aYXt" data-mode="popup" style="display:inline-block;text-decoration:none;background-color:#2C5854;color:white;cursor:pointer;font-family:Helvetica,Arial,sans-serif;font-size:16px;line-height:40px;text-align:center;margin:0;height:40px;padding:0px 26px;border-radius:0px;max-width:100%;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-weight:bold;-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale;" data-hide-headers="true" data-hide-footer="true" data-submit-close-delay="5" target="_blank">Hit this button!
        </a>
        <script>
          (function () {
            var qs,
              js,
              q,
              s,
              d = document,
              gi = d.getElementById,
              ce = d.createElement,
              gt = d.getElementsByTagName,
              id = "typef_orm_share",
              b = "https://embed.typeform.com/";
            if (!gi.call(d, id)) {
              js = ce.call(d, "script");
              js.id = id;
              js.src = b + "embed.js";
              q = gt.call(d, "script")[0];
              q
                .parentNode
                .insertBefore(js, q)
            }
          })()
        </script>

      </div>
      <!-- rsvp__item -->

      <h2 class="rsvp__item-number">
        <span>3.
        </span>Please consider donating to Strange Cargo</h2>
      <p>This is for any among you who feel the need to give a little wedding gift.<br>Also for those who value and enjoy all that Strange Cargo brings to our community!</p>
      <p>Go on....</p>
      <div class="rsvp__item rsvp__item--paypal">

        <form class="donate" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
          <input type="hidden" name="cmd" value="_donations"/>
          <input type="hidden" name="business" value="info@strangecargo.org.uk"/>
          <input type="hidden" name="currency_code" value="GBP"/>
          <input type="image" src="https://www.paypalobjects.com/en_US/GB/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button"/>
          {# <img alt="" border="0" src="https://www.paypal.com/en_GB/i/scr/pixel.gif" width="1" height="1"/> #}
        </form>

      </div>
      <!-- rsvp__item -->

    </div>
    <!-- .rsvp -->

  </div>
  <!-- row -->

{% endblock %}

{% block js %}
  <!-- extra scripts for this page only, begin with 'build js' and give filename.min.js for it -->
{% endblock %}